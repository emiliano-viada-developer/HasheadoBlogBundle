{% extends 'HasheadoBlogBundle::admin_layout.html.twig' %}
{% block content %}
	<div class="row-fluid sortable">		
		<div class="box span12">
			<div class="box-header well" data-original-title>
				<h2><i class="icon-user"></i> Comments</h2>
			</div>

			<div class="box-content">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
					<thead>
						<tr>
							<th>
								<a href="{{ path('hasheado_blog_admin_comment_filter', { 'field': 'id', 'mode': sort_mode_reverse }) }}" title="Sort by Id">Id</a>
							</th>
							<th>Post</th>
							<th>
								<a href="{{ path('hasheado_blog_admin_comment_filter', { 'field': 'userEmail', 'mode': sort_mode_reverse }) }}" title="Sort by User Email">User Email</a>
							</th>
							<th>Content</th>
							<th>Accepted</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% if comments|length > 0 %}
				            {% for comment in comments %}
				                <tr>
				                    <td>{{ comment.id }}</td>
				                    <td>{{ comment.post }}</td>
				                    <td>{{ comment.userEmail }}</td>
				                    <td>{{ comment.content }}</td>
				                    <td>{{ comment.isAccepted }}</td>
				                    <td>
				                    	<a href="{{ path('hasheado_blog_admin_comment_edit', { 'id': comment.id }) }}">Edit</a> &nbsp;&nbsp;
				                    	<a href="{{ path('hasheado_blog_admin_comment_delete', { 'id': comment.id }) }}">Delete</a>
				                    </td>
				                </tr>
				            {% endfor %}
				        {% else %}
				            <tr>
				                <td class="text-center" colspan="6">No results.</td>
				            </tr>
				        {% endif %}
					</tbody>
				</table>
				
				{% include 'HasheadoBlogBundle:Admin/Default:paginator.html.twig' %}

				{% set minus_top = (paginator.have_to_paginate)? 'top-50' : null %}
				<a class="btn btn-success {{ minus_top }}" href="{{ path('hasheado_blog_admin_comment_add') }}">Add new Comment</a>
			</div>
		</div>
	</div>
{% endblock %}