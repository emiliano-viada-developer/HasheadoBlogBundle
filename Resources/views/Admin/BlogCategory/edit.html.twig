{% extends 'HasheadoBlogBundle::admin_layout.html.twig' %}
{% block content %}
	<h1>Edit Category</h1>

	<form action="{{ path('hasheado_blog_admin_category_edit', { 'id': category_id }) }}" method="POST">
		{{ form_errors(form) }}

		<div>
		    {{ form_label(form.name) }}
		    {{ form_errors(form.name) }}
		    {{ form_widget(form.name) }}
		</div>

		{{ form_rest(form) }}

		<input type="submit" name="submit_button" value="Edit" />
		<a href="{{ path('hasheado_blog_admin_category_list') }}">Cancel</a> &nbsp;
		<a href="{{ path('hasheado_blog_admin_category_delete', { 'id': category_id }) }}">Delete</a>
	</form>
{% endblock %}