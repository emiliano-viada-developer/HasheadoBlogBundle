{% extends '::base.html.twig' %}

{% block title %}Blog - Admin{% endblock %}

{% block stylesheets %}
	{% stylesheets 
		'bundles/hasheadoblog/bootstrap/css/bootstrap-responsive.css'
		'bundles/hasheadoblog/bootstrap/css/bootstrap-classic.css'
		'bundles/hasheadoblog/bootstrap/css/charisma-app.css'
		'bundles/hasheadoblog/bootstrap/css/uniform.default.css'
		'bundles/hasheadoblog/css/main.css' filter='cssrewrite' %}
		<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock stylesheets %}

{% block body %}
	
	<!-- Header (Topbar) -->
	{% include 'HasheadoBlogBundle:Admin/Default:_header.html.twig' %}

	<div class="container-fluid">
		<div class="row-fluid">

			<!-- sidebar menu -->
			{% include 'HasheadoBlogBundle:Admin/Default:_aside_menu.html.twig' %}
			
			<noscript>
				<div class="alert alert-block span10">
					<h4 class="alert-heading">Warning!</h4>
					<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
				</div>
			</noscript>

			<!-- content starts -->
			<div id="content" class="span10">

				{% render(controller('HasheadoBlogBundle:Admin/Default:breadcrumb', { current_route: app.request.attributes.get('_route') })) %}

				{% include 'HasheadoBlogBundle:Admin/Default:_flash_messages.html.twig' %}

				{% block content %}{% endblock %}

			</div>

		</div>
	</div> <!-- END container-fluid -->

	<hr/>

	<footer>
		<p class="text-center">&copy; 2013 - {{ blog_title }}</p>
	</footer>

{% endblock %}

{% block javascripts %}
	{% javascripts 'bundles/hasheadoblog/bootstrap/js/bootstrap.min.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
	<script type="text/javascript" src="/bundles/hasheadoblog/tinymce/js/tinymce/tinymce.min.js"></script>
{% endblock javascripts %}